# Scrapy MCP Server Configuration
# Copy this file to .env and customize the values

# Server Settings
SCRAPY_MCP_SERVER_NAME=scrapy-mcp-server
SCRAPY_MCP_SERVER_VERSION=0.1.0

# Scrapy Framework Settings
SCRAPY_CONCURRENT_REQUESTS=16
SCRAPY_DOWNLOAD_DELAY=1.0
SCRAPY_RANDOMIZE_DOWNLOAD_DELAY=true
SCRAPY_AUTOTHROTTLE_ENABLED=true
SCRAPY_AUTOTHROTTLE_START_DELAY=1.0
SCRAPY_AUTOTHROTTLE_MAX_DELAY=60.0
SCRAPY_AUTOTHROTTLE_TARGET_CONCURRENCY=1.0

# Browser Automation Settings
SCRAPY_MCP_ENABLE_JAVASCRIPT=false
SCRAPY_MCP_BROWSER_HEADLESS=true
SCRAPY_MCP_BROWSER_TIMEOUT=30

# Anti-Detection Settings
SCRAPY_MCP_USE_RANDOM_USER_AGENT=true
SCRAPY_MCP_DEFAULT_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"

# Proxy Settings (optional)
SCRAPY_MCP_USE_PROXY=false
SCRAPY_MCP_PROXY_URL=

# Request Settings
SCRAPY_MCP_MAX_RETRIES=3
SCRAPY_MCP_REQUEST_TIMEOUT=30